extends partials/layout.pug

block content
	.contactForm
		h1 What the hell do you want?
		//- .image
		//- 	img(src='/img/pizza2.jpg')

		form(method='POST')
			.form-group
				label(for="exampleInputName1") Name
				input(type="text" class="form-control" name="name" id="exampleInputName1" placeholder="Name")
			.form-group
				label Email address
				input(type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder="you@internets.com")
			.form-group
				label Phone
				input(type="tel" class="form-control" name="phone" id="exampleInputPhone1" placeholder="123-456-7890")
			.form-group
				label Message
				textarea(class="form-control" name="message" id="exampleInputTextArea1" rows=5 placeholder="Message")
			.contact-form__submit
				a.btn.btn-danger.btn-lg(href='/') Cancel
				input.btn.btn-success.btn-lg(type='submit' value='Submit')

